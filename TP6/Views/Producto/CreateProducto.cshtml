@model TP6.Models.Producto

@{
    ViewData["Title"] = "CreateProducto";
}

<h1>Alta de Producto</h1>

<form asp-controller="Producto" asp-action="CreateProducto" method="post">
    <div class="form-group mb-3">
        <label asp-for="Description">Descripción</label>
        <input asp-for="Description" class="form-control" id="descripcion">
    </div>
    <div class="form-group mb-3">
        <label asp-for="Price">Precio</label>
        <input asp-for="Price" class="form-control">
    </div>
    <div class="form-group mb-2">
        <button type="submit" class="btn btn-primary">Crear</button>
    </div>
</form>