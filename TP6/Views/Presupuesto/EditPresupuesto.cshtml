@model TP6.Models.Presupuesto

@{
    ViewData["Title"] = "Editar Presupuesto";
}

<h1>Modificar Presupuesto</h1>

<form asp-controller="Presupuesto" asp-action="EditPresupuesto" method="post">
    <div class="form-group mb-3">
        <label asp-for="NombreDestinatario">Nombre del Destinatario</label>
        <input asp-for="NombreDestinatario" class="form-control" id="descripcion" value="@Model.NombreDestinatario">
    </div>
    <div class="form-group mb-3">
        <label asp-for="FechaCreacion">Fecha de Creación</label>
        <input asp-for="FechaCreacion" class="form-control" type="datetime" value="@Model.FechaCreacion" readonly>
    </div>
    <input asp-for="IdPresupuesto" type="hidden" value="@Model.IdPresupuesto" />
    <div class="form-group mb-2">
        <button type="submit" class="btn btn-primary">Modificar</button>
    </div>
</form>
