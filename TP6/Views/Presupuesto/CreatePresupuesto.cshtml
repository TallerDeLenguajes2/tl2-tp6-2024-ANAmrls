@model TP6.Models.Presupuesto

@{
    ViewData["Title"] = "Alta de Presupuesto";
}

<h1>Alta de Presupuesto</h1>

<form asp-controller="Presupuesto" asp-action="CreatePresupuesto" method="post">
    <div class="form-group mb-3">
        <label asp-for="NombreDestinatario">Nombre del destinatario</label>
        <input asp-for="NombreDestinatario" class="form-control">
    </div>
    <div class="form-group mb-3">
        <label asp-for="FechaCreacion">Fecha de Creación</label>
        <input asp-for="FechaCreacion" type="datetime" value="@DateTime.Today" class="form-control" readonly>
    </div>
    <div class="form-group mb-2">
        <button type="submit" class="btn btn-primary">Crear</button>
    </div>
</form>