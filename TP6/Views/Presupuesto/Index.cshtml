@model IEnumerable<TP6.Models.Presupuesto>
@{
    ViewData["Title"] = "Listado de Presupuestos";
}

<h1>Listado de Presupuestos</h1>

<table class="table table-striped table-dark table-bordered align-middle">
    <caption>Lista de productos</caption>
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Destinatario</th>
            <th scope="col">Fecha de Creación</th>
            <th scope="col">Ver Detalle</th>
            <th scope="col">Agregar Producto</th>
            <th scope="col">Modificar</th>
            <th scope="col">Eliminar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var presupuesto in Model)
        {
            var fecha = DateOnly.FromDateTime(presupuesto.FechaCreacion);
            <tr>
                <td>@presupuesto.IdPresupuesto</td>
                <td>@presupuesto.NombreDestinatario</td>
                <td>@fecha</td>
                <td><a asp-controller="Presupuesto" asp-action="GetDetalle" asp-route-idPresupuesto="@presupuesto.IdPresupuesto" class="btn btn-info">Detalles</a></td>
                <td><a asp-controller="Presupuesto" asp-action="AddProducto" asp-route-idPresupuesto="@presupuesto.IdPresupuesto" class="btn btn-info">Agregar</a></td>
                <td><a asp-controller="Presupuesto" asp-action="EditPresupuesto" asp-route-idPresupuesto="@presupuesto.IdPresupuesto" class="btn btn-info">Modificar</a></td>
                <td><a asp-controller="Presupuesto" asp-action="DeletePresupuesto" asp-route-idPresupuesto="@presupuesto.IdPresupuesto" class="btn btn-danger">Eliminar</a></td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Presupuesto" asp-action="CreatePresupuesto" class="btn btn-dark btn-lg">Nuevo Presupuesto</a>
