@model TP6.Models.Presupuesto

@{
    ViewData["Title"] = "Detalles del Presupuesto";
}

<h1>Presupuesto para: @Model.NombreDestinatario</h1>
<p>Fecha de Creación: @Model.FechaCreacion</p>
<p>Monto Total: @Model.MontoPresupuesto()</p>
<p>Total con IVA: @Model.MontoPresupuestoConIva()</p>

<table class="table table-striped table-dark table-bordered align-middle">
    <caption>Detalle de los Productos</caption>
    <thead>
        <tr>
            <th scope="col">Descripción</th>
            <th scope="col">Precio</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model.Detalle)
        {
            <tr>
                <td>@detalle.Producto.Description</td>
                <td>@detalle.Producto.Price</td>
                <td>@detalle.Cantidad</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Presupuesto" asp-action="Index" class="btn btn-dark btn-lg">Volver a la lista</a>
